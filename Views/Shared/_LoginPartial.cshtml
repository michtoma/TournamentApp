@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUsers> SignInManager
@inject UserManager<AppUsers> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <a class="nav-link p-0" asp-controller="User" asp-action="Edit" asp-route-id="@UserManager.GetUserId(User)" title="Manage"><i class="bi bi-person-square"></i> @UserManager.GetUserName(User)</a>
        <form class="form-inline text-center p-0" asp-controller="Account" asp-action="LogOff" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-center col-12 p-0"><i class="bi bi-person-x"></i> Logout</button>
        </form>
    }
    else
    {
        <a class="nav-link p-0" asp-area="" asp-controller="Account" asp-action="Login"><i class="bi bi-person-bounding-box"></i> Login</a>
    }
</ul>
