            </div>
            <div class="form-group">
                <label asp-for="ScoreCountry2" class="control-label"></label>
                <input asp-for="ScoreCountry2" class="form-control" />
                <span asp-validation-for="ScoreCountry2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
