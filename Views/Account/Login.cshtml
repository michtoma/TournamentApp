@using Mundial.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}




<div class="row">
    <div class="col-md-6 text-center">
        <h1 class="text-primary">Log in</h1>
        <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" role="form" class="text-center">
            <h4>Use a local account to log in.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group text-center">
                <label asp-for="UserName" class="col-md-2"></label>
                <div class="col-md-12">
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="col-md-2"></label>
                <div class="col-md-12">
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class=" col-md-12 mt-1">
                    <div class="custom-checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12 mt-1">
                    <button type="submit" class="btn btn-primary form-control">Log in</button>
                </div>
                <div class="col-md-12">
                    <a class="btn btn-secondary w-100 mt-1" asp-action="Register"> Register as a new user?</a>
                </div>
            <p>
            </p>
            </div>
        </form>
    </div>
   
</div>
